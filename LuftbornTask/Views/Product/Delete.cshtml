@model LuftbornTask.Models.Product
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<form asp-action="Delete"  method="post">
    <input type="hidden" asp-for="Id" />
    <div class="row">
        <div class="col-lg-12">
            <div class="form-group">
                <label>Product Code:</label>
                <input asp-for="ProductCode" type="text" disabled class="form-control required" placeholder="Enter ProductCode" tabindex="1">
            </div>
            <div class="form-group">
                <label>Product Name:</label>
                <input asp-for="ProductName" type="text" disabled class="form-control required" placeholder="Enter Product Name" tabindex="2">
            </div>
            <div class="form-group">
                <label>Quantity:</label>
                <input asp-for="Quantity" type="text" disabled class="form-control required" placeholder="Enter Quantity" tabindex="3">
            </div>
            <div class="form-group">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
            <div class="card-footer">
                <center>
                    <button type="submit" class="btn btn-danger">Delete Product</button>
                    <a asp-action="Index" asp-controller="Contacts" class="btn btn-secondary">Cancel</a>
                </center>
            </div>
        </div>
    </div>
</form>